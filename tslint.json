{
  "enable": true,
  "extends": [
    "tslint-config-airbnb"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules",
      "**/*.js"
    ]
  },
  "rules": {
    "align": false,
    "no-var-keyword": true,
    "no-unused": true,
    "semicolon": false,
    "no-duplicate-variable": true,
    // tslint-config-airbnb
    "import-name": false,
    "no-submodule-imports": false,
    "interface-over-type-literal": false,
    "defaultSeverity": "warning",
    "variable-name": [
      true,
      "allow-pascal-case"
    ]
  }
}
