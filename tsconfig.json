{
    "compilerOptions": {
      "jsx": "react",
      "lib": ["es2017", "es6", "dom"],
      "target": "es5",
      "module": "esnext",
      "moduleResolution": "node",
      "sourceMap": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "downlevelIteration": true,
      "removeComments": false,
      "skipLibCheck": true,
      "allowJs": true,
      "checkJs": false,
      "importHelpers": true,
      "outDir": "/dist",
      "baseUrl": "./",
      "paths": {
          "@app/*": ["./src/*"]
      }
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules",
      "**/*.js",
      "dist",
      "build",
      "webpack",
    ],
    "types": [
      "typePatches"
    ]
  }