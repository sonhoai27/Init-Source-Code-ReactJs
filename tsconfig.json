{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "charset": "utf8",
    "downlevelIteration": true,
    "sourceMap": true,
    "removeComments": false,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "/dist",
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.js",
    "dist",
    "build",
    "webpack",
  ],
  "types": [
    "typePatches"
  ]
}